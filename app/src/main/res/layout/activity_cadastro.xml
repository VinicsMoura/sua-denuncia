<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.suadenuncia.CadastroActivity"
    android:id="@+id/ScrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_weight="0.19"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo_sd" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:hint="E-mail" />

    <EditText
        android:id="@+id/et_senha"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_confirmar_senha"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Confirmar senha"
        android:inputType="textPassword"
        />

        <TextView
            android:id="@+id/tv_voce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Você é..."
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText"
            android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/rg_tipo"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="5dp">

        <RadioButton
            android:id="@+id/rb_civil"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="Civil"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_guarda"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="Guarda"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_secretaria"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:text="Secretaria"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Cadastrar"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_corner_bt"/>

</LinearLayout>
</ScrollView>