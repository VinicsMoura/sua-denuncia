<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.suadenuncia.DenunciaActivity"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_denuncia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cadastro de denúncia"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
        android:textColor="#333333"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_titulo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Título"
        />

    <EditText
        android:id="@+id/et_descricao"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:ems="10"
        android:layout_margin="5dp"
        android:hint="Descrição"
        android:inputType="textMultiLine"
        />

    <AutoCompleteTextView
        android:id="@+id/actv_categoria"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Categoria"
        />

    <Button
        android:id="@+id/bt_cadDenuncia"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:text="Cadastrar denúncia"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_corner_bt"/>

</LinearLayout>
</ScrollView>
